<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/second_item_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_one"
        android:onClick="secondActivityAction"/>
    <Button
        android:id="@+id/second_item_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_two"
        android:onClick="secondActivityAction"/>
    <Button
        android:id="@+id/second_item_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_three"
        android:onClick="secondActivityAction"/>
    <Button
        android:id="@+id/second_item_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_four"
        android:onClick="secondActivityAction"/>
    <Button
        android:id="@+id/second_item_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_five"
        android:onClick="secondActivityAction"/>
    <Button
        android:id="@+id/second_item_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_six"
        android:onClick="secondActivityAction"/>
</LinearLayout>