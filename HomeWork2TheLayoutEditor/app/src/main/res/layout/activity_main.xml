<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">


    <TextView
        android:id="@+id/main_txv_show_count"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/main_lin_btn_container"
        android:layout_marginLeft="10dp"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="160sp"
        android:textStyle="bold"
        />

   <LinearLayout
       android:id="@+id/main_lin_btn_container"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <Button
           android:id="@+id/main_btn_toast"
           android:onClick="mainActivityAction"
           android:layout_width="70dp"
           android:layout_height="wrap_content"
           android:text="TOAST"
           android:textColor="@android:color/white"
           android:background="@color/colorPrimary">

       </Button>
       <Button
           android:id="@+id/main_btn_zero"
           android:layout_marginTop="20dp"
           android:onClick="mainActivityAction"
           android:layout_width="70dp"
           android:layout_height="wrap_content"
           android:text="ZERO"
           android:textColor="@android:color/white"
           android:background="@android:color/darker_gray">

       </Button>
       <Button
           android:id="@+id/main_btn_count"
           android:layout_marginTop="20dp"
           android:onClick="mainActivityAction"
           android:layout_width="70dp"
           android:layout_height="wrap_content"
           android:text="COUNT"
           android:textColor="@android:color/white"
           android:background="@color/colorPrimary">

       </Button>
   </LinearLayout>

</RelativeLayout>